{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-console": {
      "severity": "warning"
    },
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "no-namespace": false,
    "no-bitwise": false
  }
}
