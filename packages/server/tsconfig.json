{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react"
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "baseUrl": "./",
    // "typeRoots": [],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
