{
  "compilerOptions": {
    "baseUrl": "./lib",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./custom_definitions"
  ]
}
